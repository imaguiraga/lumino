{
    "compilerOptions": {
        "declaration": false,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "ES5",
        "outDir": "./build",
        "lib": [
            "ES5",
            "ES2015.Promise",
            "ES2015.Iterable",
            "DOM"
        ],
        "types": []
    },
    "include": [
        "src/*"
    ]
}